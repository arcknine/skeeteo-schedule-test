- if @route.nil?
  - path = vessel_schedules_path(vessel_id: @vessel.id)
- else
  - path = vessel_route_schedules_path(route_id: @route.id, vessel_id: @vessel.id)
.row
  = form_with model: @schedule, url: path, html: {class: "col s12"} do |f|
    .card
      .card-content.pb-0
        .card-header.mb-2
          h4.card-title Create Schedule
        = render 'form', form: f

